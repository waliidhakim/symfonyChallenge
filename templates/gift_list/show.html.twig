{% extends 'base.html.twig' %}

{% block title %}GiftList{% endblock %}

{% block body %}
    <h1>GiftList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift_list.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gift_list.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gift_list.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ gift_list.image }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ gift_list.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ gift_list.password }}</td>
            </tr>
            <tr>
                <th>BeginDate</th>
                <td>{{ gift_list.beginDate ? gift_list.beginDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ gift_list.endDate ? gift_list.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ gift_list.theme }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gift_list_index') }}">back to list</a>

    <a href="{{ path('app_gift_list_edit', {'id': gift_list.id}) }}">edit</a>

    {{ include('gift_list/_delete_form.html.twig') }}
{% endblock %}
