<form method="post" class="m-0" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn p-0">
        <i class="fa-solid fa-user-xmark fa-xl"></i>
        {#Delete#}
    </button>
</form>
